<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Activity" />

    <Button
        android:id="@+id/BtnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp Activity" />

    <Button
        android:id="@+id/BtnPostList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post List Activity" />

    <Button
        android:id="@+id/BtnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Activity" />

    <Button
        android:id="@+id/BtnMessengerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger List Activity" />

    <Button
        android:id="@+id/BtnMessenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger Activity" />

    <Button
        android:id="@+id/BtnNotificationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification List Activity" />

    <Button
        android:id="@+id/BtnNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Activity" />

    <Button
        android:id="@+id/BtnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting Activity" />

    <Button
        android:id="@+id/BtnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Activity" />

</LinearLayout>