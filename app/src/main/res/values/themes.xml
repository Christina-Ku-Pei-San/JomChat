<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JOMCHAT" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <!-- Light mode -->
    <!-- Screen background if light mode-->
    <style name = "SCREEN">
        <item name = "android:background">#FFD1D1</item>
    </style>

    <style name = "SCREEN1">
        <item name = "android:background">#D0D2FF</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name = "android:textColor">#673AB7</item>
    </style>

    <!-- Button background if light mode on -->
    <style name="BUTTON">
        <item name ="android:background">#FFF7BB</item>
        <item name ="android:textColor">#8B90FF</item>
    </style>
</resources>