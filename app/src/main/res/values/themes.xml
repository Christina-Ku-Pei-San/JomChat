<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JOMCHAT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <!-- Light mode -->
    <!-- Screen background if light mode-->
    <style name = "SCREEN">
        <item name = "android:background">#EBF4FA</item>
    </style>

    <style name = "SCREEN2">
        <item name = "android:background">#EBF4FA</item>
    </style>

    <style name = "TOOLBAR">
        <item name = "android:background">#B3CDE0</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name = "android:textColor">#000000</item>
    </style>

    <style name="TITLE">
        <item name = "android:textColor">#3B7DD8</item>
    </style>

    <!-- Button background if light mode on -->
    <style name="SIGNUPBUTTON">
        <item name ="android:backgroundTint">#FFFFFF</item>
        <item name ="android:textColor">#3B7DD8</item>
    </style>

    <style name="LOGINBUTTON">
        <item name ="android:backgroundTint">#3B7DD8</item>
        <item name ="android:textColor">#FFFFFF</item>
    </style>

    <style name="ADDPOSTBUTTON">
        <item name ="android:backgroundTint">#3B7DD8</item>
        <item name ="android:textColor">#FFFFFF</item>
    </style>

    <!-- Switch background if light mode on -->
    <style name="SWITCH">
        <item name ="android:backgroundTint">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name ="android:textColor">#3B7DD8</item>
    </style>

    <!-- AddPost background if light mode on -->
    <style name="ADDPOST">
        <item name ="android:background">#FFF7BB</item>
        <item name="android:textColor">#6E6B6B</item>
        <item name ="textInputOutlinedStyle"> @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Text input layout background if light mode on -->
    <style name="TEXTINPUTLAYOUT">
        <!--<item name ="boxStrokeColor">@color/purple_500</item>-->
        <item name="boxBackgroundColor">#B3CDE0</item>
        <item name ="textInputOutlinedStyle"> @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="TEXTINPUTLAYOUT2">
        <!--<item name ="boxStrokeColor">@color/purple_500</item>-->
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name ="textInputOutlinedStyle"> @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Drop down menu background if light mode on -->
    <style name="DROPDOWNMENU">
        <!--<item name ="boxStrokeColor">@color/purple_500</item>-->
        <item name="boxBackgroundColor">#B3CDE0</item>
        <item name ="textInputOutlinedStyle"> @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu</item>
    </style>

    <style name="EDITTEXT">
        <item name ="android:background">#FFFFFF</item>
        <item name ="android:textColor">#000000</item>
    </style>

    <style name = "POSTITEM">
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "android:strokeColor">#3B7DD8</item>
    </style>

    <style name = "OWNPOSTITEM">
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "android:strokeColor">#3B7DD8</item>
    </style>

    <style name = "LIKEPOST">
        <item name = "android:drawableLeft">@drawable/ic_baseline_thumb_up_light_mode</item>
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "android:textColor">#000000</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name = "COMMENTPOST">
        <item name = "android:drawableLeft">@drawable/ic_outline_mode_comment_24_light</item>
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "android:textColor">#000000</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name = "SHAREPOST">
        <item name = "android:drawableLeft">@drawable/ic_baseline_share_24_light</item>
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "android:textColor">#000000</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name = "DELETEPOST">
        <item name = "android:drawableLeft">@drawable/ic_baseline_delete_light_mode</item>
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:strokeColor">#000000</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name = "LIKER">
        <item name = "android:src">@drawable/ic_baseline_thumb_up_light_mode</item>
    </style>

    <style name = "SEARCH">
        <item name = "android:backgroundTint">#FFFFFF</item>
        <item name = "srcCompat">@drawable/ic_baseline_search_24_light</item>
    </style>

    <style name = "BACKBUTTON">
        <item name = "android:src">@drawable/ic_baseline_arrow_back_24_light</item>
    </style>

    <style name = "MESSENGER">
        <item name = "android:backgroundTint">#EBF4FA</item>
        <item name="android:strokeColor">#000000</item>
    </style>

    <style name="FAVOURITE">
        <item name ="android:progressTint">#FFF7BB</item>
    </style>

    <style name = "LINE">
        <item name = "android:background">#3B7DD8</item>
    </style>
</resources>